<UserControl x:Class="WPFWebSearch.View.ImageCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWebSearch.View"
             mc:Ignorable="d">
    <Grid Height="250">
        <CheckBox x:Name="mycheck" Checked="mycheck_Checked" Unchecked="mycheck_UnChecked">
            <Image x:Name="myImage" Width="auto" Height="auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CheckBox>

    </Grid>
</UserControl>
