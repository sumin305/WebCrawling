<UserControl x:Class="WPFWebSearch.View.SaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWebSearch.View"
             mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding DeleteCommand}" Key="Delete"></KeyBinding>
    </UserControl.InputBindings>
    <Grid>
        
        <Button Content="Save"  Command="{Binding FileSaveCommand}"  Width="50" Height="30" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
        <Button Content="All Select" Command="{Binding AllSelectCommand}" Margin="0 0 30 0" Height="30" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0 0 150 0" Height="30" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right"/>
        
    </Grid>
</UserControl>
